<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Создание таблицы dynamic_rule -->
    <changeSet id="1-create-dynamic-rule-table" author="you">
        <createTable tableName="dynamic_rule">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_text" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="rule_json" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Добавление столбца product_code -->
    <changeSet id="2-add-product-code" author="you">
        <addColumn tableName="dynamic_rule">
            <column name="product_code" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addUniqueConstraint tableName="dynamic_rule"
                             columnNames="product_code"
                             constraintName="uk_dynamic_rule_product_code"/>
    </changeSet>

</databaseChangeLog>