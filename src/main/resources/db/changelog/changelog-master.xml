<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
     http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-create-dynamic-rule-table" author="you">
        <createTable tableName="dynamic_rule">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_text" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="rule_json" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-add-product-code" author="you">
        <addColumn tableName="dynamic_rule">
            <column name="product_code" type="varchar(64)"/>
        </addColumn>
        <addNotNullConstraint tableName="dynamic_rule" columnName="product_name" columnDataType="varchar(255)"/>
        <addUniqueConstraint tableName="dynamic_rule" columnNames="product_code" constraintName="uq_dynamic_rule_product_code"/>
    </changeSet>

    <changeSet id="3-defaults" author="nik">
        <preConditions onFail="CONTINUE">
            <dbms type="postgresql"/>
        </preConditions>
        <addDefaultValue tableName="dynamic_rule"
                         columnName="id"
                         defaultValueComputed="gen_random_uuid()"/>
        <addDefaultValue tableName="dynamic_rule"
                         columnName="created_at"
                         defaultValueComputed="now()"/>
        <rollback>
            <dropDefaultValue tableName="dynamic_rule" columnName="id"/>
            <dropDefaultValue tableName="dynamic_rule" columnName="created_at"/>
        </rollback>
    </changeSet>


    <changeSet id="4-create-dynamic-rule-stats-table" author="you">
        <createTable tableName="dynamic_rule_stats">
            <column name="rule_id" type="UUID" autoIncrement="false">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="count" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

    <includeAll path="path/to/sql/migrations/" relativeToChangelogFile="true" />

</databaseChangeLog>